{
  "env": {
    "ANTHROPIC_BASE_URL": "https://adesso-ai-hub.3asabc.de",
    "ANTHROPIC_DEFAULT_OPUS_MODEL": "claude-opus-v4.5",
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "claude-sonnet-v4.5",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "claude-haiku-4.5",
    "ENABLE_LSP_TOOL": "1"
  },

  "model": "opusplan",
  "alwaysThinkingEnabled": true,
  "autoUpdatesChannel": "latest",
  "autoApprove": true,

  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(tee:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(curl:*)",
      "Bash(echo:*)",
      "Bash(test:*)",
      "Bash(git:*)",
      "Bash(cd:*)",
      "Bash(dir:*)",
      "Bash(mkdir:*)",
      "Bash(./mvnw:*)",
      "Bash(./mvnw.cmd:*)",
      "Bash(mvn:*)",
      "Bash(mvnw:*)",
      "Bash(mvnw.cmd:*)",
      "Bash(java:*)",
      "Bash(javap:*)"
    ]
  },
  "enabledPlugins": {
    "jdtls-lsp@claude-plugins-official": true
  }
}
